<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1F"> <!-- Фон -->

    <Button
        android:id="@+id/ringButton"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_stroke"
        android:elevation="8dp"
        android:text="Крути"
        android:textColor="@color/white"
        android:textSize="24sp" /> <!-- Круглая кнопка, цвет фона изменен на пастельный золотистый и добавлен эффект тени -->

    <Button
        android:id="@+id/flashlightButton"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/ringButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#2e7031"
        android:elevation="4dp"
        android:text="Фонарик"
        android:textColor="@color/white"
        android:textSize="16sp" /> <!-- Цвет фона изменен на пастельный зеленый и добавлен эффект тени -->

    <Button
        android:id="@+id/morseButton1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@id/ringButton"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@id/ringButton"
        android:backgroundTint="#8a3115"
        android:elevation="4dp"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible" /> <!-- Кнопка морзе 1 -->

    <Button
        android:id="@+id/morseButton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@id/ringButton"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/ringButton"
        android:backgroundTint="#12568c"
        android:elevation="4dp"
        android:text="QRZ"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible" /> <!-- Кнопка морзе 2 -->

    <Button
        android:id="@+id/morseButton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/ringButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:backgroundTint="#6e6c0e"
        android:elevation="4dp"
        android:text="GL"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible" /> <!-- Кнопка морзе 3 -->
    <!-- Кнопка морзе 3 -->
</RelativeLayout>
